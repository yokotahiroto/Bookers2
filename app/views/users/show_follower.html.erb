<h2>Followe User</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
    <tr> 
      <td>
        <%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_image.jpg", size:'40x40' %>
      </td>
      <td>
        <%= user.name %> 
      </td>
      <td>
        <p>フォロー数：<%= user.follower.count %></p>
      </td>
      <td>
        <p>フォロワー数：<%= user.followed.count %></p>
      </td>
      <td>
        <%= link_to "show", user_path(user) %>
      </td>
    </tr>
    <% end %> 
  </tbody>
</table>