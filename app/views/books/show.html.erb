<%= render 'users/list', user: @user %> 
      <div class="col-md-8 offset-md-1">
        <h2>Books detail</h2>
        <table class="table">
          <tbody>
            
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg", size:'40x40' %><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td><%= @book_show.title %></td>
              <td><%= @book_show.body %></td>
              <% if @user.id == current_user.id %>
             <td><%= link_to "edit", edit_book_path(@book_edit), class: 'btn btn-success btn-sm btn-block' %></td>
             <td><%= link_to "destroy", book_path(@book_show), method: :delete, "data-confirm" => "本当に消しますか", class: 'btn btn-danger btn-sm btn-block'%></td>
            </tr> 
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>