
<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg", size:'100x100' %>
        <table class>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th class="profile-name"><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <buttun class = "btn btn-outline-secondary btn-block fas fa-user-cog" <%= link_to "", edit_user_path(@user) %>
          </buttun>
          </div>
        <h2 class="mt-3">New Book</h2>
        <%= form_with model:@book, local:true do |f| %>
           <p>Title</p>
            <%= f.text_field :title %>
            <p>Opinion</p>
            <%= f.text_area :body %><br>
            <button class = "btn btn-success">Create book</button>
            <% end %>
      </div>
      <div class="col-md-8 offset-col-md-1">
        <h2>Books detail</h2>
        <table class="table">
          <tbody>
            
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg", size:'40x40' %><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td><%= @book_show.title %></td>
              <td><%= @book_show.body %></td>
             <td><%= link_to "edit", edit_book_path(@book_edit), class: 'btn btn-success btn-sm btn-block' %></td
            </tr> 
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>