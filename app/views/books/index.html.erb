<%= render 'users/list', user: @user %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %> 
            <tr>
              <td><%= attachment_image_tag @user_, :profile_image, size:'40x40', fallback: "no_image.jpg", size:'40x40' %></td>
              <td><%= link_to book.title, book_path(@user) %></td>
              <td><%= book.body %></td>
            </tr> 
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>